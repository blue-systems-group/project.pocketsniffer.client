<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp" >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="UBIT Name"
        />
    <EditText
            android:id="@+id/ubitEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
        />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="UB Person Number (8 digits)"
        />
    <EditText
            android:id="@+id/personNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
        />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Credit Card You Used to Pay PhoneLab (last 4 digits)"
        />

    <EditText
            android:id="@+id/creditCardEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
        />

    <CheckBox 
            android:id="@+id/acceptCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="I have read and accept the following agreement. (No data will be uploaded before you accept this agreement.)"
            android:layout_marginBottom="10dp"
        />

    <WebView
            android:id="@+id/agreementWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
        />

</LinearLayout>
